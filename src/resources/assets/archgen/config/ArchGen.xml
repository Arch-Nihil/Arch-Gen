	<!-- =================================================================================================================
	|																													 |
	|	Arch-Gen's Custom Ore Generation Module: This configuration covers every stone and ore generated by the mod.     |
	|																													 |
	================================================================================================================== --> 
<IfModInstalled name="archgen">
	<ConfigSection>
		<ConfigSection>
		<!-- =========================================================================================================
		| 											  Main Configuration UI 										 |
		========================================================================================================== -->
			<ConfigSection>
				<OptionDisplayGroup name='groupArchGenMain' displayName='Arch-Gen' displayState='shown'>
					<Description>
						Main options for Arch-Gen's worldgen.
					</Description>
				</OptionDisplayGroup>
				<OptionChoice name='enableMain' displayName="Arch-Gen's Worldgen" default='true' displayState='shown_dynamic' displayGroup='groupArchGenMain'>
					<Description> Should Custom Ore Generation generate anything from Arch-Gen ? </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod worldgen, pretty please !'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod whole worlgen.'/>
				</OptionChoice>
				<OptionChoice name='enableStones' displayName="Arch-Gen's Stones Generation" default=':= if(?enableMain, "true", "false")' displayState=':= if(?enableMain, "shown_dynamic", "hidden")' displayGroup='groupArchGenMain'>
					<Description> Should Custom Ore Generation generate stones from Arch-Gen ? </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod stone generation.'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod stone generation.'/>
				</OptionChoice>
				<OptionChoice name='enableOres' displayName="Arch-Gen's Ores Generation" default=':= if(?enableMain, "true", "false")' displayState=':= if(?enableMain, "shown_dynamic", "hidden")' displayGroup='groupArchGenMain'>
					<Description> Should Custom Ore Generation generate ores from Arch-Gen ? </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod ore generation !'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod ore generation.'/>
				</OptionChoice>
				<OptionChoice name='enableSoils' displayName="Arch-Gen's Soils Generation" default=':= if(?enableMain, "true", "false")' displayState=':= if(?enableMain, "shown_dynamic", "hidden")' displayGroup='groupArchGenMain'>
					<Description> Should Custom Ore Generation generate soils from Arch-Gen ? </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod soil generation.'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod soil generation.'/>
				</OptionChoice>
			</ConfigSection>
		<!-- =========================================================================================================
		| 											 Stone Configuration UI 										 |
		========================================================================================================== -->
			<ConfigSection>
				<OptionDisplayGroup name='groupArchGenStones' displayName='Arch-Gen Stones' displayState=':= if(?enableStones, "shown", "hidden")'>
					<Description>
						Options for Arch-Gen stones generation.
					</Description>
				</OptionDisplayGroup>
				<OptionChoice name='enableStoneSubstitutions' displayName="Arch-Gen's Substitution Stones" default=':= if(?enableStones, "true", "false")' displayState=':= if(?enableStones, "shown_dynamic", "hidden")' displayGroup='groupArchGenStones'>
					<Description> Should Custom Ore Generation generate Arch-Gen's substitution stones ? (Recommended !) </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod stone substitutions.'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod stone substitutions.'/>
				</OptionChoice>
				<OptionChoice name='enableStoneClouds' displayName="Arch-Gen's Cloud Stones" default=':= if(?enableStones, "true", "false")' displayState=':= if(?enableStones, "shown_dynamic", "hidden")' displayGroup='groupArchGenStones'>
					<Description> Should Custom Ore Generation generate some of Arch-Gen's stones as clouds ? </Description>
					<Choice value=':= ?true' displayValue='Activated' description='Activate the mod stone clouds.'/>
					<Choice value=':= ?false' displayValue='Deactivated' description='Deactivate the mod stone clouds.'/>
				</OptionChoice>
			</ConfigSection>
		<!-- ==================================	    Granite Configuration UI	=================================== -->
			<ConfigSection>
				<OptionChoice name='enableGranite' displayName="Arch-Gen's Granite Generation" default=':= if(?enableStones, "true", "false")' displayState=':= if(?enableStones, "shown", "hidden")' displayGroup='groupArchGenStones'>
					<Description> Controls if Granite is generated. </Description>
					<Choice value=':= ?true' displayValue='Generate' description='Generate granite as substitution.'/>
					<Choice value=':= ?false' displayValue="Don't Generate" description='Do not generate granite as sustitution.'/>
				</OptionChoice>
		<!-- ==================================	    Basalt Configuration UI 	=================================== -->
				<OptionChoice name='enableBasalt' displayName="Arch-Gen's Basalt Generation" default=':= if(?enableStones, "true", "false")' displayState=':= if(?enableStones, "shown", "hidden")' displayGroup='groupArchGenStones'>
					<Description> Controls if Basalt is generated. </Description>
					<Choice value=':= ?true' displayValue='Generate' description='Generate Basalt as substitution.'/>
					<Choice value=':= ?false' displayValue="Don't Generate" description='Do not generate Basalt as sustitution.'/>
				</OptionChoice>
		<!-- ==================================	    Gabbro Configuration UI 	=================================== -->
				<OptionChoice name='enableGabbro' displayName="Arch-Gen's Gabbro Generation" default=':= if(?enableStones, "true", "false")' displayState=':= if(?enableStones, "shown", "hidden")' displayGroup='groupArchGenStones'>
					<Description> Controls if Gabbro is generated. </Description>
					<Choice value=':= ?true' displayValue='Generate' description='Generate Gabbro as substitution.'/>
					<Choice value=':= ?false' displayValue="Don't Generate" description='Do not generate Gabbro as sustitution.'/>
				</OptionChoice>
			</ConfigSection>
		<!-- =========================================================================================================
		| 											  Ore Configuration UI 											 |
		========================================================================================================== -->
		<ConfigSection>
			<OptionDisplayGroup name='groupArchGenOres' displayName='Arch-Gen Ores' displayState=':= if(?enableOres, "shown", "hidden")'>
				<Description>
					Options for Arch-Gen ores generation.
				</Description>
			</OptionDisplayGroup>
		</ConfigSection>
		<!-- =========================================================================================================
		| 											  Soil Configuration UI 										 |
		========================================================================================================== -->
		<ConfigSection>
			<OptionDisplayGroup name='groupArchGenSoils' displayName='Arch-Gen Soils' displayState=':= if(?enableSoils, "shown", "hidden")'>
				<Description>
					Options for Arch-Gen soils generation.
				</Description>
			</OptionDisplayGroup>
		</ConfigSection>
	</ConfigSection>
	
		<!-- =========================================================================================================
		| 											  Stone Substitutions	 										 |
		========================================================================================================== -->
		<ConfigSection>
			<IfCondition condition=':= ?enableStones'>
			<IfCondition condition=':= ?enableStoneSubstitutions'>
			<IfCondition condition=':= ?enableGabbro'>
				<Substitute name='GabbroSubstitutionAll' minHeight="0" maxHeight="8">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone'/>
					<Biome name='.*'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionLand' minHeight="8" maxHeight="20">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone'/>
					<Biome name='.*'/>
					<Biome name='Ocean.*' weight='-1'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionOceanTransitionLower' minHeight="9" maxHeight="9">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.75"/>
					<Biome name='Ocean.*'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionOceanTransitionMiddle' minHeight="10" maxHeight="11">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.5"/>
					<Biome name='Ocean.*'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionOceanTransitionUpper' minHeight="11" maxHeight="12">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.25"/>
					<Biome name='Ocean.*'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionLandTransitionLower' minHeight="21" maxHeight="22">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.75"/>
					<Biome name='.*'/>
					<Biome name='Ocean.*' weight='-1'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionLandTransitionMiddle' minHeight="23" maxHeight="24">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.5"/>
					<Biome name='.*'/>
					<Biome name='Ocean.*' weight='-1'/>
				</Substitute>
				<Substitute name='GabbroSubstitutionLandTransitionUpper' minHeight="25" maxHeight="26">
					<OreBlock block='archgen:Gabbro:0' weight='0.333'/>
					<OreBlock block='archgen:Gabbro:1' weight='0.334'/>
					<OreBlock block='archgen:Gabbro:2' weight='0.333'/>
					<Replaces block='stone' weight="0.25"/>
					<Biome name='.*'/>
					<Biome name='Ocean.*' weight='-1'/>
				</Substitute>
			</IfCondition>
			<IfCondition condition=':= ?enableGranite'>
				<Substitute name='GraniteSubstitution' minHeight="0" maxHeight="255">
					<OreBlock block='archgen:Granite:0' weight='0.333'/>
					<OreBlock block='archgen:Granite:1' weight='0.334'/>
					<OreBlock block='archgen:Granite:2' weight='0.333'/>
					<Replaces block='stone'/>
					<Biome name='.*'/>
					<Biome name='Ocean.*' weight='-1'/>
				</Substitute>
			</IfCondition>
			<IfCondition condition=':= ?enableBasalt'>
				<Substitute name='BasaltSubstitution' minHeight="0" maxHeight="64">
					<OreBlock block='archgen:Basalt:0' weight='0.333'/>
					<OreBlock block='archgen:Basalt:1' weight='0.334'/>
					<OreBlock block='archgen:Basalt:2' weight='0.333'/>
					<Replaces block='stone'/>
					<Biome name='Ocean.*'/>
				</Substitute>
			</IfCondition>
			</IfCondition>
			</IfCondition>
		</ConfigSection>
	</ConfigSection>
</IfModInstalled>